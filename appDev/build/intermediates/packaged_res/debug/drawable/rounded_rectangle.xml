        android:bottom="7dp"
        android:left="4dp"
        android:right="4dp"
        android:top="7dp" />

    <size
        android:height="612dp"
        android:width="430dp"/>

    <stroke
        android:color="#ffffff"
        android:width="10dp"/>

    <padding android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp"/>

    <corners
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />


