<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/dela_gothic_one"
        android:text="SETTINGS"
        android:textColor="#FF0000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHABOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="278dp"
        android:drawableLeft="@drawable/help_24px"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:fontFamily="@font/dela_gothic_one"
        android:text="ABOUT"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNotif" />

    <Button
        android:id="@+id/buttonSetUp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="57dp"
        android:backgroundTint="#000000"
        android:drawableRight="@drawable/chevron_right_24px"
        android:drawableTint="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="SETUP"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHABOUT" />

    <TextView
        android:id="@+id/textViewhNOTIF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="174dp"
        android:drawableLeft="@drawable/notifications_24px"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:fontFamily="@font/dela_gothic_one"
        android:text="NOTIFICATIONS"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangePassword" />

    <TextView
        android:id="@+id/textNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="sans-serif-condensed"
        android:text="APP NOTIFICATIONS"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/switchAppNot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewhNOTIF" />

    <Switch
        android:id="@+id/switchAppNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textNotif"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangePassword" />

    <TextView
        android:id="@+id/textViewHAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="250dp"
        android:drawableLeft="@drawable/account_circle_24px"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:fontFamily="@font/dela_gothic_one"
        android:text="ACCOUNT"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettings" />

    <Button
        android:id="@+id/buttonViewAccount"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#000000"
        android:drawableRight="@drawable/chevron_right_24px"
        android:drawableTint="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="VIEW ACCOUNT DETAILS"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHAccount" />

    <Button
        android:id="@+id/buttonLogout"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="65dp"
        android:drawableRight="@drawable/logout_24px"
        android:drawableTint="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="LOGOUT"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteAccount" />

    <Button
        android:id="@+id/buttonDeleteAccount"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#000000"
        android:drawableRight="@drawable/chevron_right_24px"
        android:drawableTint="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="DELETE ACCOUNT"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewAccount" />

    <TextView
        android:id="@+id/textViewHPAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="92dp"
        android:drawableLeft="@drawable/lock_24px"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:fontFamily="@font/dela_gothic_one"
        android:text="PRIVACY AND SECURITY"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogout" />

    <Button
        android:id="@+id/buttonChangePassword"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#000000"
        android:drawableRight="@drawable/chevron_right_24px"
        android:drawableTint="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="CHANGE PASSWORD"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangeEmail" />

    <Button
        android:id="@+id/buttonChangeEmail"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#000000"
        android:drawableRight="@drawable/chevron_right_24px"
        android:drawableTint="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="CHANGE EMAIL"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHPAS" />


</androidx.constraintlayout.widget.ConstraintLayout>